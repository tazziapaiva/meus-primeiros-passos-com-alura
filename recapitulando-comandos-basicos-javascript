let valor1 = 07;
let valor2 = 11;
let resultado = valor1 + valor2;

console.log(`A soma de ${valor1} e ${valor2} é igual a ${resultado}`);

let valor1 = 19;
let valor2 = 12;
let resultado = valor1 - valor2;

console.log(`A diferença de ${valor1} e ${valor2} é igual a ${ resultado}`);


let idade = prompt('Digite a sua idade:');
if (idade > 17) {
    console.log('Usuário é MAIOR de idade');
} else {
    console.log('Usuário é MENOR de idade');
}

var numero = parseFloat(prompt('Digite um número:'));

if (numero > 0) {
    console.log(`O número ${numero} é positivo`);
} else if (numero < 0) {
     console.log(`O número ${numero} é negativo`);
} else {
    console.log(`O número ${numero} é zero`);
} 

let numero = 1;
while (numero <= 10) {
    console.log(numero);
    numero++;
}


let numeroAleatorio = Math.random()
console.log(numeroAleatorio)

let numero2 = parseInt(Math.random() * 10) + 1
console.log(numero2)

let numero3 = parseInt(Math.random() *1000) + 1
console.log(numero3)
